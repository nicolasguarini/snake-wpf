<Page x:Class="snake_wpf.StartMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:snake_wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartMenu">

    <Grid>
        <TextBlock Text="Snake by Nicolas Guarini"  FontSize="32" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, -150, 0, 0" FontFamily="Courier New"/>
        <StackPanel Margin="0, 0, 0, 0" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Height="50" Content="New Game" Click="BtnClickNewGame" FontFamily="Courier New"/>
            <Button Width="100" Height="50" Content="Scores" Margin="30, 0, 0, 0" FontFamily="Courier New"/>
        </StackPanel>
    </Grid>
</Page>
